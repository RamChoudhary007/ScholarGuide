{
  "name": "ScholarGuide",
  "version": "1.0.0",
  "description": "A student monitoring system for connecting students with mentors",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "build": "npm run build --prefix client",
    "install-client": "npm install --prefix client",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "keywords": [
    "react",
    "node",
    "mongodb",
    "mentorship"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.22"
  }
}
